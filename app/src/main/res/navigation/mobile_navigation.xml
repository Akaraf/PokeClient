<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.raaf.pokeclient.ui.MenuFragment"
        android:label="" >
        <action
            android:id="@+id/action_menuFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_menuFragment_to_randomPokemonFragment"
            app:destination="@id/randomPokemonFragment" />
        <action
            android:id="@+id/action_menuFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.raaf.pokeclient.ui.SearchFragment"
        android:label="" />
    <fragment
        android:id="@+id/randomPokemonFragment"
        android:name="com.raaf.pokeclient.ui.RandomPokemonFragment"
        android:label="" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.raaf.pokeclient.ui.FavoritesFragment"
        android:label="" />
</navigation>